{
  "include": ["src"],
  "compilerOptions": {
    "ignoreDeprecations": "6.0",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/Components/*"],
      "@const/*": ["src/CONST/*"],
      "@src/*": ["src/*"],
      "@screen/*": ["src/Screen/*"],
      "@hook/*": ["src/HOOK/*"],
      "@effects/*": ["src/Effects/*"],
      "@store/*": ["src/DATA/Store/*"],
      "@fetch/*": ["src/DATA/Fetch/*"],
      "@service/*": ["src/DATA/Service/*"],
      "@interfaces/*": ["src/DATA/Interfaces/*"],
      "@memo/*": ["src/HOOK/memo/*"]
    },
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "decorators",
      "dom",
      "es2020",
      "scripthost",
    ]
  },
  "experimentalDecorators": true,
  "emitDecoratorMetadata": true
}